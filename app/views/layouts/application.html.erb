<!DOCTYPE html>
<html>
<head>
  <title>Okcupidclone</title>
  <%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application'%>
  <%= csrf_meta_tags %>
</head>
<body>
<header>
  <% if current_user %>
    Hello, <%= current_user.email %>!
    <form class="logout" action="<%= session_url %>" method="post">
      <input type="hidden" name="_method" value="delete">
      <%= authentic_form %>
      <button>Log Out</button>
    </form>
  <% end %>
</header>
<%= yield %>

</body>
</html>
