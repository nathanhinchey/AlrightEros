<h1>Answer Questions</h1>
<p class="question-body">
  <%= question.escape("question_body") %>
</p>

<% question.get("answers") && question.get("answers").forEach(function(answer){ %>
    <label
      class="radio-input-label form-fieldset group"
      for="answer-choice-<%= question.escape("id") %>-<%= _.escape(answer.id) %>">
      <%= _.escape(answer.answer_text) %>
    <input
      type="radio"
      class="radio-input form-fieldset"
      name="user_answer[answer_id]"
      value="<%= _.escape(answer.id) %>"
      id="answer-choice-<%= question.escape("id") %>-<%= _.escape(answer.id) %>">
    </label>
<% }); %>

<button class="submit">Save Answer</button>
