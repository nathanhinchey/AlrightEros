<figure class="profile-picture-container">
  <img src="<%= profile.escape("picture_url") %>" alt="" class="profile-picture" />
</figure>

<h1 class="username"><%= profile.escape("username") %></h1>

<% if (profile.id == AlrightEros.currentUser.escape('profile_id')){ %>
  <a href="#/profiles/edit" class="button edit-profile">Edit your profile</a>
<% } %>


<ul class="profile-attributes">
  <li>Supervillain</li>
  <li><%= profile.escape("age") %></li>
  <li>Evil</li>
</ul>


<nav class="profile-nav group">
  <ul class="button-list">
    <li class="nav-li">
      <a href="#/profiles/<%= profile.escape('id') %>/essays" class="button edit-profile">Essays</a>
    </li>
    <li class="nav-li">
      <a href="#/profiles/<%= profile.escape('id') %>/questions" class="button edit-profile">Questions</a>
    </li>
    <li class="nav-li">
      <% if (profile.id != AlrightEros.currentUser.escape('profile_id')){ %>
        <a href="#/profiles/<%= profile.escape('id') %>/messages" class="button edit-profile">Message!</a>
    <% } %>
    </li>
  </ul>
</nav>
